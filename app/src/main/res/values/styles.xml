<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/BlueActionBar</item>
    </style>
    <style name="BlueActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/dark_blue</item>
    </style>
    <style name="GrayText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="ImportantText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/dark</item>
    </style>

</resources>
