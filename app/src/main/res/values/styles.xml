<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/BlueActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/BlueActionBar</item>
    </style>

    <style name="BlueActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue</item>
        <!-- Support library compatibility -->
        <item name="background">@color/blue</item>
    </style>

    <style name="GrayText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ImportantText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
